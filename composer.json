{
    "name": "matteocontrini/flarum-imgur-upload",
    "description": "Simple image upload from the Flarum editor",
    "type": "flarum-extension",
    "license": "GPL-3.0",
    "authors": [
      {
        "name": "Matteo Contrini",
        "email": "matteo@contrini.it"
      },
      {
        "name": "Matteo Pompili",
        "email": "matpompili@gmail.com"
      }
    ],
    "require": {
        "flarum/core": ">=0.1.0-beta.14 <0.1.0-beta.15"
    },
    "extra": {
        "flarum-extension": {
            "title": "Imgur Upload",
            "icon": {
                "name": "fas fa-circle",
                "backgroundColor": "#272727",
                "color": "#85BF25"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "ImgurUpload\\": "src/"
        }
    }
}
